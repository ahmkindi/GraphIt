@inherits InsertBase

<nav class="navbar sticky-top navbar-expand navbar-custom py-0 px-0">
    <div class="d-inline-flex">
        <div class="px-1">
            <SfCheckBox TChecked="bool" Label="Nodes" @onclick="UpdateInsertNode" Checked="InsertNode">Nodes</SfCheckBox>
        </div>
        <div class="px-1">
            <SfCheckBox TChecked="bool" Label="Edges" @onclick="UpdateInsertEdge" Checked="InsertEdge">Edges</SfCheckBox>
        </div>
        <div class="dropdown px-1">
            <button class="btn shadow-none NavNone dropdown-toggle" type="button" id="saveas" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Common Graphs
            </button>
            <div class="dropdown-menu" aria-labelledby="saveas">
                <a class="dropdown-item" @onclick="(() => WantedGraph = CommonGraph.Complete)">Complete</a>
                <a class="dropdown-item" @onclick="(() => WantedGraph = CommonGraph.CBipartite)">Complete Bipartite</a>
                <a class="dropdown-item" @onclick="(() => WantedGraph = CommonGraph.Regular)">Regular</a>
                <a class="dropdown-item" @onclick="(() => WantedGraph = CommonGraph.RBipartite)">Regular Bipartite</a>
                <a class="dropdown-item" @onclick="(() => WantedGraph = CommonGraph.Cyclic)">Cyclic</a>
                <a class="dropdown-item" @onclick="(() => WantedGraph = CommonGraph.Tree)">Tree</a>
            </div>
        </div>
    </div>
</nav>
@if (WantedGraph != null && !Loading)
{
    string Klabel = "Nodes: ";
    @if (WantedGraph == CommonGraph.CBipartite)
    {
        Klabel = "Left Nodes: ";
    }
    <SfDialog Width="300px" IsModal="true">
        <DialogTemplates>
            <Content>
                @Klabel
                <SfNumericTextBox Min=1 Step=1 CssClass="shortInput" TValue="int?" @bind-Value="@KValue"></SfNumericTextBox>
                @if (WantedGraph == CommonGraph.CBipartite)
                {
                    @("Right Nodes: ")
                    <SfNumericTextBox Min=1 Step=1 CssClass="shortInput" TValue="int?" @bind-Value="@KValue2"></SfNumericTextBox>
                }
                else if (WantedGraph == CommonGraph.Regular)
                {
                    @("Degree (k): ")
                    <SfNumericTextBox Min=1 Step=1 CssClass="shortInput" TValue="int?" @bind-Value="@KValue2"></SfNumericTextBox>
                }
                <SfButton CssClass="e-success" @onclick="CreateGraph">Done</SfButton>
                <SfButton CssClass="e-success" @onclick="(() => WantedGraph = null)">Cancel</SfButton>
            </Content>
        </DialogTemplates>
    </SfDialog>
}
@if (Loading)
{
    <div class="spinner-border" role="status">
        <span class="sr-only">Graph In Making...</span>
    </div>
}
@if (ErrorCreatingGraph)
{
    <SfDialog Width="300px" IsModal="true">
        <DialogTemplates>
            <Content>
                <p class="text-danger text-center">There was a problem making the graph, make sure the nodes specified makes sense for your the graph.</p>
                <SfButton CssClass="e-success" @onclick="(() => ErrorCreatingGraph = false)">OK</SfButton>
            </Content>
        </DialogTemplates>
    </SfDialog>
}
