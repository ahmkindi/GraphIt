@page "/"
@inherits IndexBase

@if (InitialModal)
{
    <InitialModal DefaultOptions="DefaultOptions" OnClose="OnInitialClose"></InitialModal>
}
@if (Rep == Representation.Matrix)
{
    <AdjMatrix @bind-Rep="Rep"></AdjMatrix>
}
else if (Rep == Representation.List)
{

}


<NavBar @bind-Choice="Choice" ActiveEdge="ActiveEdge" ActiveNode="ActiveNode"></NavBar>

@if (Choice != null)
{
    switch (Choice)
    {
        case NavChoice.File:
            <File @bind-Rep="Rep"></File>
            break;
        case NavChoice.Insert:
            <Insert @bind-GraphMode="GraphMode"></Insert>
            break;
        case NavChoice.Node:
            <NodeOptions @bind-DefaultOptions="DefaultOptions"></NodeOptions>
            break;
        case NavChoice.Edge:
            <EdgeOptions @bind-DefaultOptions="DefaultOptions"></EdgeOptions>
            break;
        case NavChoice.Algorithms:
            <nav class="navbar sticky-top navbar-expand navbar-custom py-0 px-0">
                <div class="collapse navbar-collapse mx-0" id="navbarNav">
                    <ul class="navbar-nav mx-0">
                        <li class="nav-item">
                            <button type="button" class="btn">Save</button>
                        </li>
                    </ul>
                </div>
            </nav>
            break;
        case NavChoice.Selected:
            <Selected @bind-ActiveEdge="ActiveEdge" @bind-ActiveNode="ActiveNode" DefaultOptions="DefaultOptions"></Selected>
            break;
        case NavChoice.About:
            <nav class="navbar sticky-top navbar-expand navbar-custom py-0 px-0">
                <div class="collapse navbar-collapse mx-0" id="navbarNav">
                    <ul class="navbar-nav mx-0">
                        <li class="nav-item">
                            <button type="button" class="btn">Save</button>
                        </li>
                    </ul>
                </div>
            </nav>
            break;
    }
}

<Canvas @bind-ActiveNode="ActiveNode" @bind-ActiveEdge="ActiveEdge" ChangeMenu="UpdateChoice"
        DefaultOptions="DefaultOptions" GraphMode="GraphMode" @bind-Scale="Scale"></Canvas>
<Footer GraphMode="GraphMode" @bind-Scale="Scale"></Footer>
