@inherits NodeCircleBase

<g class="pointer"
   id="@Node.NodeId"
   @onmousedown="OnMouseDown">
    <circle cx="@Node.Xaxis"
            cy="@Node.Yaxis"
            r="@Node.Radius"
            stroke="@Node.NodeColor"
            stroke-width="2"
            fill="@Node.NodeColor" />
    <text text-anchor="middle"
          fill="@Node.LabelColor"
          stroke="@Node.NodeColor"
          stroke-width="1"
          font-size="@(Node.Radius/2)"
          font-family="Verdana"
          x="@Node.Xaxis"
          y="@Node.Yaxis">
        @if (Node.Label == null)
        {
            @Node.NodeId
        }
        else
        {
            @Node.Label
        }
    </text>
</g>

@if (ActiveNode != null && Node.NodeId == ActiveNode.NodeId)
{
    <rect x="@(Node.Xaxis-Node.Radius)"
          y="@(Node.Yaxis-Node.Radius)"
          width="@(Node.Radius*2)"
          height="@(Node.Radius*2)"
          stroke="black"
          stroke-dasharray="5,5"
          fill="none" />
}
