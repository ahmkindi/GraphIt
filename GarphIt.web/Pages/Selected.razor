@inherits SelectedBase

<nav class="navbar sticky-top navbar-expand navbar-custom py-0 px-0">
    <div class="d-flex">
        @if (ActiveEdge != null)
        {
            <div class="px-1">
                <SfCheckBox @bind-Checked="ActiveEdge.Directed" Label="Directed" @onchange="OnDirectedChange" CssClass="e-small"></SfCheckBox>
            </div>
            <div class="px-1">
                Width <SfNumericTextBox TValue="int?" Value="@ActiveEdge.Width" Min=1 Max=15 Step=1 CssClass="shortInput"
                                        Placeholder="Width" @onchange="((e) => OnWidthChange(e))"></SfNumericTextBox>
            </div>
            <div class="px-1">
                Color <SfColorPicker Value="@ActiveEdge.EdgeColor" ValueChange="OnEdgeColorChange"></SfColorPicker>
            </div>
            <div class="px-1">
                Label
                <SfTextBox CssClass="shortInput" ValueChange="OnEdgeLabelChange" Value="@ActiveEdge.Label"></SfTextBox>
                <SfColorPicker Value="@ActiveEdge.LabelColor" ValueChange="OnEdgeLabelColorChange"></SfColorPicker>
            </div>
            <div class="px-1">
                Curve
                <SfButton CssClass="e-round" IconCss="e-icons e-plus-icon" IsPrimary="true" IsToggle="true" @onclick="(() => OnCurve(0.1))"></SfButton>
                <SfButton CssClass="e-round" IconCss="e-icons e-plus-icon" IsPrimary="true" IsToggle="true" @onclick="(() => OnCurve(-0.1))"></SfButton>
            </div>
            @if (DefaultOptions.Weighted)
            {
                <div class="px-1">
                    Weight <SfNumericTextBox Value="@ActiveEdge.Weight" Min=1 ShowSpinButton=false CssClass="shortInput"
                                             Placeholder="Weight" @onchange="((e) => OnWeightChange(e))"></SfNumericTextBox>
                </div>
            }
        }
        else if (ActiveNode != null)
        {
            <div class="px-1">
                Radius <SfNumericTextBox TValue="int?" Value="@ActiveNode.Radius" Min=10 Max=100 Step=1 Format="###" CssClass="shortInput"
                                         Placeholder="Radius" @onchange="((e) => OnRadiusChange(e))"></SfNumericTextBox>
            </div>
            <div class="px-1">
                Color <SfColorPicker Value="@ActiveNode.NodeColor" ValueChange="OnNodeColorChange"></SfColorPicker>
            </div>
            <div class="px-1">
                Label
                @if (ActiveNode.Label == null)
                {
                    <SfTextBox CssClass="shortInput" ValueChange="OnNodeLabelChange" Value="@(ActiveNode.NodeId.ToString())"></SfTextBox>
                }
                else
                {
                    <SfTextBox CssClass="shortInput" ValueChange="OnNodeLabelChange" Value="@ActiveNode.Label"></SfTextBox>
                }
                <SfColorPicker Value="@ActiveNode.LabelColor" ValueChange="OnNodeLabelColorChange"></SfColorPicker>
            </div>
        }
    </div>
</nav>
