<text x="@AlgorithmNode.Node.Xaxis" 
      y="@(AlgorithmNode.Node.Yaxis-AlgorithmNode.Node.Radius-10)"
      font-size="@(AlgorithmNode.Node.Radius/2)"
      text-anchor="middle">@AlgorithmNode.Header</text>
<g id="@AlgorithmNode.Node.NodeId">
    <circle cx="@AlgorithmNode.Node.Xaxis"
            cy="@AlgorithmNode.Node.Yaxis"
            r="@AlgorithmNode.Node.Radius"
            stroke="@AlgorithmNode.Node.NodeColor"
            stroke-width="2"
            fill="@AlgorithmNode.Node.NodeColor" />
    <text text-anchor="middle"
          fill="@AlgorithmNode.Node.LabelColor"
          stroke="@AlgorithmNode.Node.NodeColor"
          stroke-width="1"
          font-size="@(AlgorithmNode.Node.Radius/2)"
          font-family="Verdana"
          x="@AlgorithmNode.Node.Xaxis"
          y="@AlgorithmNode.Node.Yaxis">
        @AlgorithmNode.Node.Label
    </text>
</g>

@code{
    [Parameter] public AlgorithmNode AlgorithmNode { get; set; }
}
