<text x="@Node.Xaxis" 
      y="@(Node.Yaxis-Node.Size-10)"
      font-size="@(Node.Size/2)"
      text-anchor="middle">@Node.Header</text>
<g id="@Node.Id">
    <circle cx="@Node.Xaxis"
            cy="@Node.Yaxis"
            r="@Node.Size"
            stroke="@Node.Color"
            stroke-width="2"
            fill="@Node.Color" />
    <text text-anchor="middle"
          fill="@Node.LabelColor"
          stroke="@Node.Color"
          stroke-width="1"
          font-size="@(Node.Size/2)"
          font-family="Verdana"
          x="@Node.Xaxis"
          y="@Node.Yaxis">
        @Node.Label
    </text>
</g>

@code{
    [Parameter] public Node Node { get; set; }
}
