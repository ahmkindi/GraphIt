@inherits NodeCircleBase

<g class="@NodeCss"
   id="@Node.Id"
   @onmousedown="OnMouseDown">
    <circle cx="@Node.Xaxis"
            cy="@Node.Yaxis"
            r="@Node.Size"
            stroke="@Node.Color"
            stroke-width="2"
            fill="@Node.Color" />
    <text text-anchor="middle"
          fill="@Node.LabelColor"
          stroke="@Node.Color"
          stroke-width="1"
          font-size="@(Node.Size/2)"
          font-family="Verdana"
          x="@Node.Xaxis"
          y="@Node.Yaxis">
    @Node.Label
    </text>
</g>

@if (Active)
{
    <rect x="@(Node.Xaxis-Node.Size)"
          y="@(Node.Yaxis-Node.Size)"
          width="@(Node.Size*2)"
          height="@(Node.Size*2)"
          stroke="black"
          stroke-dasharray="5,5"
          fill="none" />
}